{
  "name": "@logdna/commitlint-config-mezmo",
  "description": "Commitlint configuration to enforce commit message best practices",
  "version": "1.0.1",
  "main": "index.js",
  "bin": {
    "commitlint-mezmo": "./bin/cli.js"
  },
  "files": [
    "lib/**",
    "bin/**",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "tap": "tap",
    "lint": "eslint ./",
    "lint:fix": "npm run lint -- --fix",
    "test": "tools/test-ci.sh",
    "pretest": "npm run lint",
    "commitlint": "commitlint --from=origin/main --to=HEAD",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run --no-ci --branches ${BRANCH_NAME:-main}"
  },
  "author": "Darin Spivey <darin.spivey@mezmo.com>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/logdna/commitlint-config-mezmo"
  },
  "homepage": "https://github.com/logdna/commitlint-config-mezmo",
  "bugs": {
    "url": "https://github.com/logdna/commitlint-config-mezmo/issues"
  },
  "license": "SEE LICENSE IN LICENSE",
  "publishConfig": {
    "access": "public"
  },
  "commitlint": {
    "extends": [
      "./index.js"
    ]
  },
  "private": false,
  "release": {
    "extends": "semantic-release-config-logdna",
    "branches": [
      "main"
    ]
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "node_modules/",
      "coverage/"
    ],
    "extends": "logdna",
    "parserOptions": {
      "ecmaVersion": 2019
    }
  },
  "tap": {
    "100": true,
    "ts": false,
    "jsx": false,
    "browser": false,
    "check-coverage": true,
    "output-file": ".tap-output",
    "files": [
      "test/unit",
      "test/integration"
    ],
    "coverage-report": [
      "text",
      "text-summary",
      "json",
      "json-summary",
      "html"
    ],
    "nyc-arg": [
      "--all",
      "--exclude=test/",
      "--exclude=coverage/"
    ]
  },
  "devDependencies": {
    "eslint": "^8.18.0",
    "eslint-config-logdna": "^6.1.0",
    "execa": "^5.1.1",
    "glob": "^8.0.3",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.3",
    "semantic-release-config-logdna": "^1.3.0",
    "tap": "^16.3.0"
  },
  "dependencies": {
    "@commitlint/format": "^17.0.0",
    "@commitlint/lint": "^17.0.0",
    "@commitlint/load": "^17.0.0",
    "@commitlint/read": "^17.0.0",
    "commitlint": "^17.0.2",
    "nopt": "^5.0.0"
  }
}
